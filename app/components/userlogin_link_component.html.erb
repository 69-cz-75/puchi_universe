<% if request.path == new_user_session_path && !helpers.user_signed_in? %>
  <!-- ログインページで、かつユーザーが未ログインの場合のコード -->
  <%= link_to('Sign up', new_user_registration_path, class: 'btn btn-active btn-accent') %>
<% elsif !helpers.user_signed_in? %>
  <!-- その他のページで、かつユーザーが未ログインの場合のコード -->
  <%= link_to('Log in', new_user_session_path, class: 'btn btn-active btn-ghost') %>
<% end %>
