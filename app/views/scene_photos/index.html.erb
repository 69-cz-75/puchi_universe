<div class="flex flex-col w-full sm:flex-row justify-center">
  <div class="grid flex-0 h-10 card rounded-box place-items-center">
    <%= link_to((t 'defaults.gallery_index'), galleries_path, style: 'text-decoration: none; border-bottom: 3px solid #1c96B7;') %>
  </div>
  <div class="divider divider-horizontal"></div>
  <div class="grid flex-0 h-10 card rounded-box place-items-center">
    <%= link_to((t 'defaults.museum_index'), museums_path, style: 'text-decoration: none; border-bottom: 3px solid #8fccdb; color: #999;') %>
  </div>
</div>

<div class="container mx-auto p-5 items-center justify-nomal">
  <% if @current_tag.present? %>
    <p>#<%= @current_tag %></p>
  <% end %>
  <% if @search_results_count.present? && @current_tag.present? %>
    <p><%= "#{@search_results_count}" %><%= t('.contents') %></p>
  <% end %>
</div>

<% if @scene_photos.present? %>
  <div class="container mx-auto p-5 lg:h-fit flex items-center justify-center">
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <%= render @scene_photos %>
    </div>
  </div>
    <%= paginate @scene_photos, theme: 'custom_theme' %>
  <% else %>
  <div class="h-96">
    <div class="container mx-auto p-5 sm:h-full flex items-center justify-center">
      <span class="text-2xl"><%= t('.no_result') %></span>
    </div>
  </div>
<% end %>