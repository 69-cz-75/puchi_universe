<%= link_to gallery_show_path(scene_photo) do %>
  <div id="scene-photo-id-<%= scene_photo.id %>" class="max-w-sm mx-auto relative shadow-md rounded-lg cursor-pointer">
    <%= image_tag scene_photo.images[0].thumb.url, class: "w-60 h-60 object-cover rounded-lg" %>
    <div class="absolute bottom-0 left-0 right-0 h-[50%] bg-black bg-opacity-50 backdrop-blur text-white p-4 rounded-b-lg flex flex-col items-start">
      <p><%= scene_photo.title %></p>
    </div>
  </div>
<% end %>
