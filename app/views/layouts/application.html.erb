<!DOCTYPE html>
<html>
  <head>
    <title>PuchiUniverse</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "/assets/application.js", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <%= render(HeaderComponent.new(header: @header)) %>
    <%= yield %>
    <%= render(FooterComponent.new(footer: @footer))%>
  </body>
</html>
