<!-- カルーセルで画像の表示 -->
<div class="carousel w-full">
  <% @scale_comparison_photo.images.each_with_index do |image, index| %>
    <div id="slide<%= index + 1 %>" class="carousel-item relative w-full">
      <img src="<%= image.detail.url %>" class="object-cover mx-auto">
      <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
        <a href="#slide<%= index == 0 ? @scale_comparison_photo.images.length : index %>" class="btn btn-circle">❮</a>
        <a href="#slide<%= index == @scale_comparison_photo.images.length - 1 ? 1 : index + 2 %>" class="btn btn-circle">❯</a>
      </div>
    </div>
  <% end %>
</div>

<!-- インデックス表示 -->
<div class="flex justify-center w-full py-2 gap-2">
  <% @scale_comparison_photo.images.each_with_index do |_, index| %>
    <a href="#slide<%= index + 1 %>" class="btn btn-xs"><%= index + 1 %></a>
  <% end %>
</div>

<!-- 詳細情報 -->
<div class="mx-auto sm:max-w-lg">
  <div class="bg-white rounded my-6">
    <table class="text-left w-full border border-gray-400 border-collapse ">
      <tbody>
        <p class="text-lg font-bold mb-2"><%= t '.detail'%></p>
        <tr>
          <td class="py-4 px-6 border-b border-r border-gray-400 font-bold text-sm bg-gray-100"><%= t '.product_name'%></td>
          <td class="py-4 px-6 border-b border-gray-400">
            <%= @scale_comparison_photo.product_name %>
          </td>
        </tr>
        <tr>
          <td class="py-4 px-6 border-b border-r border-gray-400 font-bold text-sm bg-gray-100"><%= t '.company'%></td>
          <td class="py-4 px-6 border-b border-gray-400">
            <%= @scale_comparison_photo.company %>
          </td>
        </tr>
        <tr>
          <td class="py-4 px-6 border-b border-r border-gray-400 font-bold text-sm bg-gray-100"><%= t '.kind'%></td>
          <td class="py-4 px-6 border-b border-gray-400">
            <div class="flex items-center">
              <%= @scale_comparison_photo.kind %><%= t '.kind'%>
            </div>
          </td>
        </tr>
        <tr>
          <td class="py-4 px-6 border-b border-r border-gray-400 font-bold text-sm bg-gray-100"><%= t '.content'%></td>
          <td class="py-4 px-6 border-b border-gray-400">
            <%= simple_format @scale_comparison_photo.content %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
