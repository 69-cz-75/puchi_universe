<div class="sm:flex">
  <% if scale_comparison_photo.images[0].present? %>
    <%= link_to museum_show_path(scale_comparison_photo) do %>
      <%= image_tag scale_comparison_photo.images[0].thumb.url, class: "w-60 h-60 object-cover rounded-lg" %>
    <% end %>
  <% else %>
    <%= link_to museum_show_path(scale_comparison_photo) do %>
      <%= image_tag 'default.png', class: "w-60 h-60 object-cover rounded-lg" %>
    <% end %>
  <% end %>
    <div class="flex flex-col justify-start py-8 sm:mx-6">
      <%= link_to museum_show_path(scale_comparison_photo), class: "text-xl font-semibold text-blue-500 mb-2" do %>
        <%= scale_comparison_photo.product_name %>
      <% end %>
      <div class="mb-2">
        <%= scale_comparison_photo.company %>
      </div>
    </div>
  </div>
