<div class="sm:flex  items-center">
  <% if scale_comparison_photo.images[0].present? %>
    <%= link_to museum_path(scale_comparison_photo), class: "flex-none sm:w-1/3" do %>
      <%= image_tag scale_comparison_photo.images[0].thumb.url, class: "w-full h-auto object-cover rounded-lg lg:w-60 lg:h-60" %>
    <% end %>
  <% else %>
    <%= link_to museum_path(scale_comparison_photo), class: "flex-none sm:w-1/3" do %>
      <%= image_tag 'default.png', class: "w-full h-auto object-cover rounded-lg lg:w-60 lg:h-60" %>
    <% end %>
  <% end %>
  <div class="flex flex-col justify-start py-8 sm:w-2/3 sm:mx-6">
    <%= link_to museum_path(scale_comparison_photo), class: "md:text-lg lg:text-xl font-semibold text-blue-500 mb-2 whitespace-normal overflow-wrap-break-word" do %>
      <%= scale_comparison_photo.product_name %>
    <% end %>
    <div class="mb-2">
      <%= scale_comparison_photo.company %>
    </div>
  </div>
</div>